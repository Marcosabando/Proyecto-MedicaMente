<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
    <title>Todos los Doctores</title>
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="/stylesheets/allDoctors.css">
  </head>
  <body>
    <header><%- include('modules/navbar.ejs') %></header>
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-12 text-center mb-4">
            <h2>Lista de Doctores</h2>
            <div class="search-container">
              <form action="/buscar" method="GET">
                  <input type="search" 
                         name="q" 
                         list="speciality" 
                         placeholder="Buscar...">
                  
                  <datalist id="speciality">
                    <option value="cardiologia">Cardiología</option>
                    <option value="dermatologia">Dermatología</option>
                    <option value="digestiva">Medicina Digestiva</option>
                    <option value="endocrinologia">Endocrinología</option>
                    <option value="gastroenterologia">Gastroenterología</option>
                    <option value="ginecologia">Ginecología</option>
                    <option value="medicina_urgencias">Medicina de Urgencias</option>
                    <option value="neurologia">Neurología</option>
                    <option value="neumologia">Neumología</option>
                    <option value="oncologia">Oncología</option>
                    <option value="oftalmologia">Oftalmología</option>
                    <option value="ortopedia">Ortopedia</option>
                    <option value="pediatria">Pediatría</option>
                    <option value="psiquiatria">Psiquiatría</option>
                    <option value="traumatologia">Traumatología</option>
                  </datalist>
                  
                  <input type="submit" value="Buscar">
              </form>
          </div>
          </div>
        </div>
        <div class="row justify-content-center">
          <% result.forEach((elem)=>{ %>
            <div class="col-12 col-sm-6 col-md-3 col-lg-3 mb-3">
              <div class="card">
                <img src="/images/doctors/<%= elem.doctor_image? elem.doctor_image : 'default-profile.png' %>" class="card-img-top" alt="Doctor Image">
                <div class="card-body">
                  <h5 class="card-title"><%= elem.doctor_name %> <%= elem.last_name %></h5>
                  <p class="card-text">Especialidad: <%= elem.speciality %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
    <footer><%- include("modules/footer.ejs") %></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>