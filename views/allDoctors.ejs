<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
    <title>Todos los Doctores</title>
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="/stylesheets/allDoctors.css">
  </head>
  <body>
    <header><%- include('modules/navbar.ejs') %></header>
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-12 text-center mb-4">
            <h2>Lista de Doctores</h2>
            <div class="search-container">
              <form action="/doctors/search" method="GET">
                  <input type="search" 
                         name="speciality" 
                         list="speciality" 
                         placeholder="Buscar Especialidad..." class="form-control">
                  
                  <datalist id="speciality">
                    <option value="Select">Selecciona una opción</option>
                    <option value="Cardiología">Cardiología</option>
                    <option value="Dermatología">Dermatología</option>
                    <option value="Digestiva">Medicina Digestiva</option>
                    <option value="Endocrinologia">Endocrinología</option>
                    <option value="Gastroenterologia">Gastroenterología</option>
                    <option value="Ginecologia">Ginecología</option>
                    <option value="Medicina_urgencias">Medicina de Urgencias</option>
                    <option value="Neurologia">Neurología</option>
                    <option value="Neumologia">Neumología</option>
                    <option value="Oncologia">Oncología</option>
                    <option value="Oftalmologia">Oftalmología</option>
                    <option value="Ortopedia">Ortopedia</option>
                    <option value="Pediatria">Pediatría</option>
                    <option value="Psiquiatria">Psiquiatría</option>
                    <option value="Traumatologia">Traumatología</option>
                  </datalist>
                  
                  <input type="submit" value="Buscar" class="btn btn-primary mt-2">
              </form>
          </div>
          </div>
        </div>
        <div class="row justify-content-center">
          <% if (result && result.length > 0) { %>
            <% result.forEach((elem) => { %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card">
                  <img src="/images/doctors/<%= elem.doctor_image || 'default-profile.png' %>" class="card-img-top" alt="Doctor Image">
                  <div class="card-body">
                    <h5 class="card-title"><%= elem.doctor_name %> <%= elem.last_name %></h5>
                    <p class="card-text">Especialidad: <%= elem.speciality %></p>
                    <p class="card-text">Residente en: <%= elem.hospital_name %></p>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="col-12 text-center">
              <h3>No se encontraron doctores con la especialidad seleccionada</h3>
            </div>
          <% } %>
        </div>
      </div>
    </main>
    <footer><%- include("modules/footer.ejs") %></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>