<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
    <title>Formulario de Cita Hospitalaria</title>
    <link rel="stylesheet" href="/stylesheets/commonStyles.css" />
    <link rel="stylesheet" href="/stylesheets/register.css" />
    <link rel="stylesheet" href="/stylesheets/formEditBand.css" />
  </head>
  <body>
    <header><%- include("modules/navbar.ejs") %></header>

    <main>
      <div class="container">
        <div class="form-container">
          <h2 class="form-title">Formulario de Cita Hospitalaria</h2>
          <form action="/hospitals/singleHospital/<%= id_hospital %>" method="POST">
            <div class="mb-3">
              <label for="patientName" class="form-label">Nombre del Paciente</label>
              <input type="text" class="form-control" id="patientName" name="patientName" required />
            </div>
            <div class="mb-3">
              <label for="patientSurname" class="form-label">Apellidos del Paciente</label>
              <input type="text" class="form-control" id="patientSurname" name="patientSurname" required />
            </div>
            <div class="mb-3">
              <label for="appointmentReason" class="form-label">Motivo de la Cita</label>
              <textarea
                class="form-control"
                id="appointmentReason"
                name="appointmentReason"
                rows="4"
                required></textarea>
            </div>
            <div class="mb-3">
              <label for="speciality" class="form-label">Especialidad</label>
              <select class="form-select" id="speciality" name="speciality" required>
                <option value="">Seleccione una especialidad</option>
                <option value="cardiologia">Cardiología</option>
                <option value="dermatologia">Dermatología</option>
                <option value="digestiva">Medicina Digestiva</option>
                <option value="endocrinologia">Endocrinología</option>
                <option value="gastroenterologia">Gastroenterología</option>
                <option value="ginecologia">Ginecología</option>
                <option value="medicina_urgencias">Medicina de Urgencias</option>
                <option value="neurologia">Neurología</option>
                <option value="neumologia">Neumología</option>
                <option value="oncologia">Oncología</option>
                <option value="oftalmologia">Oftalmología</option>
                <option value="ortopedia">Ortopedia</option>
                <option value="pediatria">Pediatría</option>
                <option value="psiquiatria">Psiquiatría</option>
                <option value="traumatologia">Traumatología</option>
              </select>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-success">Solicitar Cita</button>
              <button
                type="button"
                class="btn btn-primary"
                onclick="window.location.href='/hospital/singleHospital/id_hospital'">
                Cancelar
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <footer><%- include("modules/footer.ejs") %></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"></script>
  </body>
</html>
