<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
    <title>Registra tu Hospital</title>
    <link rel="stylesheet" href="/stylesheets/commonStyles.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>
    <main>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-3">
                    <form action="/hospital/register" method="post" enctype="multipart/form-data">
                        <h3>Formulario registro</h3>
                        <div class="mb-3">
                          <label for="inputHospitalName" class="form-label">Nombre de tu Hospital</label>
                          <input 
                            type="text" 
                            class="form-control" 
                            id="inputHospitalName" 
                            aria-describedby="emailHelp"
                            name="hospitalName"
                           >
                        </div>
                        <div class="mb-3">
                          <label for="inputAddress" class="form-label">Dirección</label>
                          <input 
                            type="text" 
                            class="form-control" 
                            id="inputAddress" 
                            aria-describedby="emailHelp"
                            name="address"
                           >
                        </div>

                        <div class="mb-3">
                          <label for="inputPhoneNumber" class="form-label">Teléfono</label>
                          <input 
                            type="text" 
                            class="form-control" 
                            id="inputPhoneNumber" 
                            aria-describedby="emailHelp"
                            name="phoneNumber"
                           >
                        </div>

                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input 
                              type="email" 
                              class="form-control" 
                              id="inputEmail"
                              name="email"
                            >
                          </div>

                          <div class="mb-3">
                            <label for="inputHospitalDescription" class="form-label">Describe tu Hospital</label>
                            <input 
                              type="text" 
                              class="form-control" 
                              id="inputHospitalDescription" 
                              aria-describedby="emailHelp"
                              name="description"
                             >
                          </div>

                          <div class="mb-3">
                            <label for="inputPass" class="form-label">Contraseña</label>
                            <input 
                              type="password" 
                              class="form-control" 
                              id="inputPass"
                              name="password"
                            >
                          </div>
                          <div class="mb-3">
                            <label for="inputRepPass" class="form-label">Repite tu Contraseña</label>
                            <input 
                              type="password" 
                              class="form-control" 
                              id="inputRepPass"
                              name="repPassword"
                            >
                          </div>

                          <div class="mb-3">
                            <label for="inputAlbumImg" class="form-label">Subir imagen de tú Hospital</label>
                            <input 
                              type="file" 
                              class="form-control" 
                              id="inputAlbumImg"
                              name="img">
                        </div>
                        <p style="color: red;" ><%= typeof message != 'undefined'? message:null %></p>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button 
                            type="button" 
                            class="btn btn-primary"
                            onclick="window.location.href='/'"
                        >Cancelar</button>
                        <p>Si tienes una cuenta <a href="/bands/login">Login aqui</a></p>
                      </form>
                </div>
            </div>
        </div>
    </main>
    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>