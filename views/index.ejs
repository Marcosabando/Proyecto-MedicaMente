<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <header>
      <%- include("modules/navbar.ejs") %>
    </header>
     <main>
      <section class="allHospitals">
        <div class="container-fluid">
          <div class="col">
        
          </div>
          <div class="col d-flex flex-wrap gap-3 justify-content-center">
            <% result.forEach((elem)=>{ %>
              <div class="card" style="width: 18rem;">
                <img src="/images/hospitals/<%= elem.hospital_img? elem.hospital_img : 'defaultHosp.png' %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= elem.hospital_name %></h5>
                  <p class="card-text">Ubicacion: <%= elem.city %></p>
                  <p class="card-text">Dirección: <%= elem.address %></p>
                  <p class="card-text">Teléfono: <a href=""><%= elem.phone_number %></a></p>
                  <p class="card-text">Email: <a href=""> <%= elem.email %> </a></p>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Descripcion:
                    </a>
                    <ul class="dropdown-menu">
                      <p class="card-text">Descripción: <%= elem.description %></p>
                    </ul>
                  <a href="/hospital/oneHospital/<%= elem.id_band %>" class="btn btn-primary">Ver más</a>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </section>
     </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>